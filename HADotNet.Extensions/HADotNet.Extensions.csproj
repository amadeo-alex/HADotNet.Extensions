<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
	<Nullable>enable</Nullable>
	<PackOnBuild>true</PackOnBuild>
	<PackageId>Amadeo.HADotNet.Core.Extensions</PackageId>
	<PackageVersion>0.1.0</PackageVersion>
	<Authors>https://github.com/amadeo-alex</Authors>
	<Description>Additional classes and interfaces for Amadeo.HADotNet.Core expressing specific Home Assistant entities.</Description>
	<NeutralLanguage>en-US</NeutralLanguage>
	<Summary>Extension package allowing for Home Assistant entity interaction.</Summary>
	<PackageTags>home-assistant external api library extension</PackageTags>
	<Title>HADotNet Core Library Extensions</Title>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<Version>0.1.0</Version>
	<AssemblyVersion>0.1.0</AssemblyVersion>
	<FileVersion>0.1.0</FileVersion>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageProjectUrl>https://github.com/amadeo-alex/HADotNet</PackageProjectUrl>
	<RepositoryUrl>https://github.com/amadeo-alex/HADotNet.git</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

</Project>
